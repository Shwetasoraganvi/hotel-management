<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/boocking.css">
</head>
  <body>
    <div class="boocking">
        <div class="form">
        <form method="post" action="/book">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label" >Customer No</label>
                <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"  name="cid" value="<%= locals.cid %>">
              </div>
            <select class="form-select" aria-label="Default select example" name="roomType" >
                <option selected>Room Type</option>
                <option  <%= roomType === "Standard room" ? "selected" : "" %> value="Standard room">Standard room</option>
                <option value="Deluxe room" <%= roomType === "Deluxe room" ? "selected" : "" %>>Deluxe room</option>
                <option value="Accessible room"  <%= roomType === "Accessible room" ? "selected" : "" %>>Accessible room</option>
            </select>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label" >Room NO </label>
                <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= locals.Roomno %>" name="rno">
              </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Number of days</label>
                <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="numday" value="<%= numdays %>">
              </div>
            
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Bill</label>
              <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="bill" value="<%= locals.Bill%>">
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary" formaction="/GET">Get RNO</button>
            <button type="submit" class="btn btn-primary" formaction="/book" >Book room</button>
            <button type="submit" class="btn btn-primary" formaction="/bookupdate">Update</button><br><br>
            <button type="submit" class="btn btn-primary" formaction="/logout">LogOUT</button>
            <button type="submit" class="btn btn-primary" formaction="/back">Back</button>
          </form>
        </div>
    
        <div class="table">
          <table border="1">
            <tr><th>customer no</th><th>Room no</th><th>Room type</th><th>Number of days</th><th>Bill</th></tr>
            <tbody>
             <% rdata.forEach(row=>{ %>
             <tr>
                 <td><%=row.cno%></td>
                 <td><%=row.rno%></td>
                 <td><%=row.roomtype%></td>
                 <td><%=row.numdays%></td>
                 <td><%=row.bill%></td>
             </tr>
             <%})%>
            </tbody>
                 
         </table>
        </div>
    
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>